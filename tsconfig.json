{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./app/components/*"],
      "@components": ["./app/components"],
      "@screens/*": ["./app/screens/*"],
      "@screens": ["./app/screens"],
      "@utils/*": ["./app/utils/*"],
      "@utils": ["./app/utils"],
      "@constants/*": ["./app/constants/*"],
      "@constants": ["./app/constants"],
      "@hooks/*": ["./app/hooks/*"],
      "@hooks": ["./app/hooks"],
      "@models/*": ["./app/models/*"],
      "@assets/*": ["./app/assets/*"],
      "@layouts": ["./app/layouts"]
    }
  },
  "include": [
    "app",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
