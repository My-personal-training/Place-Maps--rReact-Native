{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@components": ["./app/components"],
      "@screens/*": ["./app/screens/*"],
      "@screens": ["./app/screens"],
      "@utils/*": ["./app/utils/*"],
      "@utils": ["./app/utils"],
      "@constants/*": ["./app/constants/*"],
      "@constants": ["./app/constants"],
      "@hooks/*": ["./app/hooks/*"],
      "@hooks": ["./app/hooks"],
      "@models/*": ["./app/models/*"],
      "@assets/*": ["./app/assets/*"],
      "@layouts": ["./app/layouts"],
      "@context/*": ["app/hoc/*"],
      "@store": ["./app/store"],
      "@hoc": ["./app/hoc"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "app",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
